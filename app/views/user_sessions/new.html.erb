<div class="container">
  <div class="row">
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %></br>
        <%= f.email_field :email , class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :password %></br>
        <%= f.password_field :password , class: 'form-control'%>
      </div></br>
      <div class="form-group">
        <%= f.submit 'ログイン' , class: "btn btn-danger"%>
      </div>
    <% end %>
  </div>  
</div>
