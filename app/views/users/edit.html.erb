<div class="container" >
  <div class="row">
    <%= form_with model: @user, local: true do |f| %>
      <%= render 'shared/error_messages' , object: f.object%>
      <div class="form-group">
        <%= f.label :name %></br>
        <%= f.text_field :name , class: 'form-control', placeholder: "例)多肉太郎"%>
      </div>
      <div class="form-group">  
        <%= f.label :email %></br>
        <%= f.email_field :email , class: 'form-control' ,placeholder: "例)sample@example.com"%>
      </div>
      <div class="form-group">
        <%= f.label :gender %>
        <%= f.select :gender, User.genders_i18n.invert.to_a, class: 'form-control'%>
      </div>
      <div claass="form-group">
        <%= f.label :prefecture_code%></br>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :icon %></br>
        <%= f.file_field :icon , class: 'form-contorl' %></br>
        <%= f.hidden_field :icon_cache %>
        <% if @user.icon? %>
          <%= image_tag current_user.icon_url, class: "rounded-circle", size: "100x100" %>
        <% end %>
      </div>
      <br>
      <%= f.submit 'ユーザー更新' ,class: "btn btn-danger"%>
    <% end %>
  </div>
</div>