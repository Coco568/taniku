<div class="container" >
  <div class="row">
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">  
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>