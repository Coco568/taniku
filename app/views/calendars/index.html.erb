<div class="input-record"> 
  <h1>登録する日付を入力してください</h1>
  <%= form_with model: Calendar.new,url: calendars_path,local: true do |f|%>
    <div class="form-group">
      <%= f.label :date_type%></br>
      <%= f.select :date_type, Calendar.date_types_i18n.invert%>
    </div>
    <div class="form-group">
      <%= f.label :record_date%></br>
      <%= f.date_field :record_date%>
    </div>
    <%= f.submit %>
  <% end %>
</div>

<%= turbo_frame_tag 'calendar' do %>
  <%= month_calendar(events: @calendars) do |date, calendars| %>
    <%= date.day %>
    <% calendars.each do |calendar| %>
      <% if calendar.date_type == "watering_date"%>
        <%= link_to image_tag('watering_icon', size: '30x30'), edit_calendar_path(calendar) %>
      <% elsif calendar.date_type =="pesticide_date"%>
        <%= link_to image_tag('pesticide_icon', size:'30x30'), edit_calendar_path(calendar) %>
      <% elsif calendar.date_type == "fertilizer_date" %>
        <%= link_to image_tag('fertilizer_icon', size: '30x30'),edit_calendar_path(calendar) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div class="icon">
  <%= image_tag 'watering_icon', size: '40x40' %><p>: 水やり</p>
</div>
<div class="icon">
  <%= image_tag 'pesticide_icon', size: '40x40' %><p>: 薬剤</p>
</div>
<div class="icon">
  <%= image_tag 'fertilizer_icon', size: '40x40' %><p>: 肥料</p>
</div>
