<div class="container m-5" >
  <h1>投稿内容</h1> 
  <div class="row my-4">
    <%= form_with model: @post, local: true do |f| %>
      <%= render 'shared/error_messages' , object: f.object %>
      <div class="form-group">
        <%= f.label :content , class: "post-label"%>
        <%= f.text_area :content , class: 'form-control', placeholder: "投稿する内容を入力してください", size: '30x10'%>
      </div>
      <div class="form-group">
        <%= f.label :image, class: "post-label" %></br>
        <%= f.file_field :image %>
      </div>
      <%= f.submit '投稿' , class: "btn btn-danger my-3 post-button"%>
    <% end %>
</div>