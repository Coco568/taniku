<div class="contaner ">
  <div class="card my-3 mx-5">
      <div class="row">
        <div class="col">
          <%= image_tag @post.image_url, size: '500x400'%>
        </div>
        <div class="col-6">
            <%= image_tag @post.user.icon.url, size: '100x100', class: "post-icon"%>
          <div class="row user-name">
            <%= @post.user.name%>
            <%= @post.user.pref.name%>
          </div>
          <div class="row-mx-5 detail-content">  
            <%= @post.content%>
          </div>
          <div class="row align-bottom detail-date">
            <p>投稿日:<%= @post.updated_at.strftime("%Y-%m-%d")%></p>
          </div>
        </div>
      </div>
  </div>
</div