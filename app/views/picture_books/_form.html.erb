<%= form_with model: @picture_book, local: true do |f|  %> 
  <%=render 'shared/error_messages' , object: f.object %> 
  <div class="container">  
    <div class="form-group">
      <%= f.label :breed %>
      <%= f.text_field :breed ,class:'form-control' , value: nil%>
    </div>
    <div class="col-xs-2 me-5">
      <%= f.label :price %>
      <%= f.text_field :price , class: 'form-control ' %><p>円</p>
    </div>
    <div class="form-group">
      <%= f.label :shop %>
      <%= f.text_field :shop ,class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :picture %>
      <%= f.file_field :picture %>
      <%= f.hidden_field :picture ,class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :purchase_date%>
      <%= f.date_field :purchase_date, class: 'form-control'%>
    </div>
    <%= f.submit '保存', class: 'btn btn-primary'%>
  </div>
<% end %>