<%= form_with model: @picture_book, local: true do |f|  %> 
  <%=render 'shared/error_messages' , object: f.object %> 
  <div class="container">  
    <div class="form-group">
      <%= f.label :breed %> 
      <%= f.text_field :breed ,class:'form-control' , placeholder: "例)名無し"%>
    </div>
    <div class="col-2">
      <%= f.label :price %>
    <div class="input-group mb-3 me-5">
      <%= f.text_field :price , class: 'form-control ' ,placeholder: "例)100"%>
      <span class="input-group-text" id="basic-addon1">円</span>
    </div></div>
    <div class="form-group">
      <%= f.label :shop %>
      <%= f.text_field :shop ,class: 'form-control' , placeholder: "例)ホームセンター"%>
    </div>
    <div class="form-group">
      <%= f.label :picture %>
      <%= f.file_field :picture %>
      <%= f.hidden_field :picture ,class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :purchase_date%>
      <%= f.date_field :purchase_date, class: 'form-control'%>
    </div>
    <%= f.submit '保存', class: 'btn btn-danger'%>
  </div>
<% end %>